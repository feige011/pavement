<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ndroid="http://schemas.android.com/tools"
    android:id="@+id/news_recycleRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="45dp">


        <ImageView
            android:id="@+id/member_imageView"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_chengyuan" />

        <TextView
            android:id="@+id/member_text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="飞哥011"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/member_text_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:text="部长"
            android:textColor="@color/grey"
            android:textSize="11sp" />
</LinearLayout>